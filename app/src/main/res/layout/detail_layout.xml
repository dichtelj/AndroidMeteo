<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/nomStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AlboussiÃ¨re : "
        />
    <TextView
        android:id="@+id/libelleStation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/libelle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nomStation" />
    <TextView
        android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/latitude"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/nomStation"
        android:layout_toEndOf="@+id/nomStation" />
    <TextView
        android:id="@+id/longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/longitude"
        android:layout_below="@+id/latitude"
        android:layout_alignStart="@+id/latitude" />

    <TextView
        android:id="@+id/altitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/altitude"
        android:layout_below="@+id/longitude"
        android:layout_alignStart="@+id/longitude" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liste des stations"
        android:id="@+id/listeStation"
        android:layout_below="@+id/altitude"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp"/>


</RelativeLayout>
